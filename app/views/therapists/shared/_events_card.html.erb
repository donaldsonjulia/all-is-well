<% @events.each do |e| %>
<div class="patient_card event activity-card <%= 'read' if e.read %>" data-activity-type="<%= e.class.name %>" data-id="<%= e.id %>">
    <div class="activity-type">
        <i class="fa fa-star-o"></i>
        <p>Event<span class="hyphen"> - </span>
            <span class="type-of">
                <%= e.event_type %>
            </span>
        </p>
    </div>
    <div class="activity-time">
        <p class="time long-time"><%= e.created_at.strftime("%B %d, %Y at %I:%M %P") %> </p>
        <p class="time short-time"><%= e.created_at.strftime("%m/%d/%y %l:%M%P") %> </p>
        <% if !e.read %>
        <p class="alert">
            <i class="fa fa-bell-o show"></i>
        </p>
        <% end %>
    </div>

    <p hidden class="event-content">
        <%= e.description %>
    </p>

</div>
<% end %>
