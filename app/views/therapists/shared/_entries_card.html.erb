<% @entries.each do |e| %>
<% if e.sharable == true %>
<div class="patient_card entry activity-card">
    <div class="activity-type">
        <i class="fa fa-pencil"></i>
        <p>Journal Entry</p>
    </div>
    <p class="time">
        <%= e.created_at.strftime("%B %d, %Y at %I:%M %P") %>
    </p>
    <p hidden class="entry-title">
       <%= e.title %>
    </p>
    <p hidden class="entry-content">
        <%= e.body %>
    </p>
    <p hidden>
        <%= e.read %>
    </p>
</div>
<% end %>
<% end %>
