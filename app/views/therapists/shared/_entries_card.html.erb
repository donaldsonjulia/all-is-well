<% @entries.each do |e| %>
<% if e.sharable == true %>
<div class="patient_card entry activity-card <%= 'read' if e.read %>" data-activity-type="<%= e.class.name %>" data-id="<%= e.id %>">
    <div class="activity-type">
        <i class="fa fa-pencil"></i>
        <p>Journal Entry</p>
    </div>
    <div class="activity-time">
        <p class="time">
            <%= e.created_at.strftime("%B %d, %Y at %I:%M %P") %>
        </p>
            <% if e.read == false %>
            <p class="alert">
            <i class="fa fa-bell-o show"></i>
            </p>
            <% end %>
    </div>

    <p hidden class="entry-title">
        <%= e.title %>
    </p>
    <p hidden class="entry-content">
        <%= e.body %>
    </p>

</div>
<% end %>
<% end %>
