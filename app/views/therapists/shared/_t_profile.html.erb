
<!-- if user is a therapist, edit should be included as a class in outer section. -->
  <section class="t-data data edit">

    <div class="data-block name"><h3>Therapist Name: </h3><span><div><%= @therapist_name %></div><a class="edit">Edit</a></span></div>
      <aside class="name disappear">
        <div>
          <input class="edit-data" type="text" id="first_name" placeholder="FIRSTNAME"/>
          <input class="edit-data" type="text" id="last_name" placeholder="LASTNAME"/>
          <input class="edit-data" type="text" id="cred" placeholder="CRED"/>
        </div>
          <input class="button" type="submit" value="Submit"/>
      </aside>

    <div class="data-block email"><h3>Email: </h3><span><div>EMAIL</div><a class="edit">Edit</a></span></div>
      <aside class="email disappear">
        <div>
          <input class="edit-data" type="email" id="t-email" placeholder="EMAIL"/>
        </div>
        <input class="button" type="submit" value="Submit"/>
    </aside>

    <div class="data-block phone"><h3>Primary Phone Number: </h3><span><div>123-456-7890</div><a class="edit">Edit</a></span></div>
      <aside class="phone disappear">
        <div>
          <input class="edit-data" type="text" id="phone" placeholder="123-456-7890"/>
        </div>
        <input class="button" type="submit" value="Submit"/>
      </aside>

  </section>
