<% @surveys.each do |s| %>
  <div class="patient_card mood activity-card">
    <div class="activity-type">
      <% if s.total < 5 %>
        <i class="fa fa-smile-o"></i>
      <% elsif s.total < 10 %>
        <i class="fa fa-smile-o"></i>
      <% elsif s.total < 15 %>
        <i class="fa fa-meh-o"></i>
      <% elsif s.total < 27 %>
        <i class="fa fa-frown-o"></i>
      <% end %>
      <p>Mood Survey -
         <span class="score"><%= s.total %>
         </span>
      </p>
    </div>
    <p class="time"><%= s.created_at.strftime("%B %d, %Y at %I:%M %P") %></p>
  </div>
<% end %>
