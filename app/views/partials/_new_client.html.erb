<%= form_for Client.new, url: new_client_path, method: :post do |f| %>
  <div class="new-client">
  <%= f.label :first_name %><br/>
  <%= f.text_field :first_name %><br/>

  <%= f.label :last_name %><br/>
  <%= f.text_field :last_name %><br/>

  <%= f.label :phone %><br/>
  <%= f.text_field :phone %><br/>

  <label for"contact">Emergency Contact Phone</label><br/>
  <input id="contact"/><br/>

  <label for"birth_date">Birthdate</label><br/>
  <input id="birth_date"/><br/>


  <%= f.label :therapist_id %><br/>
  <%= f.collection_select :therapist_id, Therapist.all.order(:last_name), :id, :last_name %><br/>

  <%= form_for :user do |u| %>
    <%= u.label :email %><br />
    <%= u.email_field :email %>

    <%= u.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    <%= u.password_field :password, autocomplete: "off" %>

    <%= u.label :password_confirmation %><br />
    <%= u.password_field :password_confirmation, autocomplete: "off" %><br />
    <%= f.submit "Register" , :class => 'submit_registration' %><br/>
  </div>
  <% end %>
<% end %>
